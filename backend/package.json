{
  "name": "bakery-backend",
  "version": "1.0.0",
  "description": "Backend API for Bakery Distribution Management System",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node setup-enhanced-system.js",
    "setup:enhanced": "node setup-enhanced-system.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest tests/unit",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest tests/integration",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "migrate": "node migrations/migrate.js",
    "seed": "node seeders/seed.js",
    "seed:dev": "NODE_ENV=development node seeders/seed.js",
    "seed:prod": "NODE_ENV=production node seeders/seed.js",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "docs:generate": "node scripts/generateDocs.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "clean": "node scripts/clean.js",
    "build": "echo 'No build step required for Node.js'",
    "logs:clear": "node scripts/clearLogs.js"
  },
  "jest": {
    "preset": "default",
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "globals": {
      "NODE_ENV": "test"
    },
    "transform": {},
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!server.js",
      "!config/**",
      "!scripts/**"
    ]
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bakery-management-system": "file:..",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.4.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "sequelize": "^6.35.2",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.6",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "bakery",
    "distribution",
    "management",
    "express",
    "mysql"
  ],
  "author": "Bakery Belgium Team",
  "license": "PRIVATE"
}
